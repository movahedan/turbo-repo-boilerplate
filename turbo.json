{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": ["NODE_ENV", "BUNDLE_ANALYZER"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": ["dist/tsc/**"]
    },
    "storybook": {
      "dependsOn": ["^build"]
    },
    "storybook-build": {
      "dependsOn": ["^lint", "^type-check"],
      "outputs": ["dist/build/storybook/**"]
    },
    "update-dependencies": {
      "cache": false
    }
  }
}
