{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "BUNDLE_ANALYZER",
    "NEXT_PUBLIC_BASE_URL"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": ["dist/tsc/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint-locale": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["dist/test/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/build/**", "!dist/build/.next/cache/**"]
    },
    "storybook": {
      "dependsOn": ["^build"]
    },
    "storybook-build": {
      "dependsOn": ["^lint", "^type-check"],
      "outputs": ["dist/build/storybook/**"]
    },
    "update-dependencies": {
      "cache": false
    }
  }
}
