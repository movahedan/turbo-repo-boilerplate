{
  "name": "my-clicky-game",
  "private": true,
  "engines": {
    "node": ">=18",
    "npm": ">=10.2.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo build --no-cache --",
    "dev": "turbo dev --",
    "lint": "turbo lint --",
    "lint-locale": "turbo lint-locale --",
    "lint-staged": "lint-staged",
    "lint-commit": "commitlint",
    "lint-branch": "branch-name-lint",
    "test": "turbo test --",
    "type-check": "turbo type-check --",
    "storybook": "turbo storybook",
    "storybook-build": "turbo storybook-build",
    "clean": "npm exec --workspaces -c 'rm -rf node_modules .next .turbo dist' && rm -rf node_modules",
    "update-dependencies": "turbo update-dependencies && npx npm-check-updates -u"
  },
  "dependencies": {
    "next": "14.1.4",
    "next-intl": "3.11.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@inlang/cli": "^2.15.3",
    "@storybook/addon-essentials": "8.0.8",
    "@storybook/addon-webpack5-compiler-swc": "1.0.2",
    "@storybook/manager-api": "8.0.8",
    "@storybook/nextjs": "8.0.8",
    "@storybook/react": "8.0.8",
    "@storybook/theming": "8.0.8",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "15.0.2",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.12.7",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "autoprefixer": "10.4.19",
    "branch-name-lint": "^2.1.1",
    "commitizen": "4.3.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.38",
    "storybook": "8.0.8",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsup": "8.0.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  }
}
